<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="forcomfort"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- 4com4t Bridge -->
	<bridge-type id="wireBridge">
		<label>4com4t Wire Bridge</label>
		<description>The 4com4t wire bridge provides connection to 4com4t Smart Home Wired System.</description>

		<config-description>
			<parameter name="port" type="text">
				<context>serial-port</context>
				<label>Serial Port Name</label>
				<description>Serial Port Name for the 4com4t bridge.</description>
				<default>COM20</default>
				<required>true</required>
			</parameter>

			<parameter name="baudRate" type="integer" required="true">
				<label>Baud Rate</label>
				<default>38400</default>
                <advanced>true</advanced>
			</parameter>
			<parameter name="dataBits" type="integer" min="5" step="1" max="8" required="true">
				<label>Data Bits</label>
				<description>The number of bits in one frame</description>
				<default>8</default>
                <advanced>true</advanced>
			</parameter>
			<parameter name="parity" type="integer" min="0" step="1" max="2" required="true">
				<label>Parity</label>
				<description>0 - none, 1 - odd, 2 - even</description>
				<default>0</default>
                <advanced>true</advanced>
			</parameter>
			<parameter name="stopBits" type="integer" min="1" max="2" step="1" required="true">
				<label>Stop Bits</label>
				<description>Number of stop bits</description>
				<default>1</default>
				<advanced>true</advanced>
			</parameter>
            <parameter name="bufferSize" type="integer" step="1" required="true">
                <label>Buffer size</label>
                <description>Size of buffer for receiving queue</description>
                <default>1024</default>
                <advanced>true</advanced>
            </parameter>
		</config-description>
	</bridge-type>


</thing:thing-descriptions>